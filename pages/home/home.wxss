/* pages/home.wxss */

.section1 {
  width: 100%;
  height: 20px;
  background: #3dbe59;
  flex-direction: column;
}

.section {
  width: 100%;
  height: 20px;
  background: #36f110;
  flex-direction: column;
}

.image {
  width: 60px;
  height: 60px;
}

.titleBar {
  width: 94%;
  height: 60px;
  background: #fff;
  border-radius: 10px;
  flex-direction: column;
  position: absolute;
  top: 10px;
  left: 3%;
  right: 3%;
}

#head {
  flex-direction: column;
}

#title {
  font-size: 12pt;
  margin-right: 5px;
  font-weight: 'bold';
}

#tabIndicator {
  position: absolute;
  width: 40px;
  background: #3dbe59;
  height: 3px;
  top: 95px;
  left: 20px;
  border-radius: 1.5px;
}

#swiper {
  border-radius: 10px;
  margin-top: 15px;
  height: 140px;
}

.slide-image {
  border-radius: 5px;
}

#activityUrl {
  width: 100%;
  height: 120px;
}